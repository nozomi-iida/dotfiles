{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "WebSearch",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_fill_form",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_close"
    ],
    "deny": [
      "Bash(aws:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(mv:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "TITLE=$(tmux display-message -p '#{?#{automatic-rename},Window #{window_index},#W}'); windows-notify -t 'Claude Code - '$TITLE -m 'タスクが完了しました'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "TITLE=$(tmux display-message -p '#{?#{automatic-rename},Window #{window_index},#W}'); windows-notify -t 'Claude Code - '$TITLE -m 'Claude Codeが許可を求めています'"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
