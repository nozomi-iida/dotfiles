{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "WebSearch"
    ],
    "deny": [
      "Bash(aws:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(mv:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "windows-notify -t 'Claude Code' -m 'タスクが完了しました'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "windows-notify -t 'Claude Code' -m 'Claude Codeが許可を求めています'"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
}
